@model Product

<div class="d-flex justify-evenly">
    <div class="container w-75 mx-auto">
        <h2>New Product</h2>
        <form 
        class="shadow p-3 rounded"
        asp-controller="Product"
        asp-action="Create"
        method="POST">
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <span asp-validation-for="Name" class="text-danger font-weighted-bold"></span>
            <input class="form-control" asp-for="Name" />
        </div>

        <div class="mb-3">
            <label asp-for="Description"></label>
            <span asp-validation-for="Description" class="text-danger font-weighted-bold"></span>
            <input class="form-control" asp-for="Description" />
        </div>

        <div class="mb-3">
            <label asp-for="Price"></label>
            <span asp-validation-for="Price" class="text-danger font-weighted-bold"></span>
            <input class="form-control" asp-for="Price" />
        </div>

        <button class="btn btn-success">Create</button>
        </form>
    </div>
</div>
